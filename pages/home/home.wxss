.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  padding: 30rpx 0;
  background: linear-gradient(135deg, #1AAD19, #2ecc71);
  margin: -20rpx -20rpx 20rpx -20rpx;
  border-radius: 0 0 30rpx 30rpx;
}

.welcome {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 10rpx;
  display: block;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-spinner {
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1AAD19;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 16rpx;
  color: #666;
  font-size: 26rpx;
}

.section {
  width: 100%;
  padding: 24rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.section-subtitle {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
  display: block;
}

.food-list {
  width: 100%;
}

.food-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.food-item:last-child {
  border-bottom: none;
}

.food-info {
  flex: 1;
}

.food-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.food-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
  display: block;
}

.food-details {
  text-align: right;
}

.food-amount {
  font-size: 26rpx;
  color: #666;
  display: block;
}

.food-calories {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
  display: block;
}

.food-desc {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
  display: block;
}

.food-tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 8rpx;
}

.food-tag {
  font-size: 20rpx;
  color: #1AAD19;
  background: rgba(26, 173, 25, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  margin-right: 8rpx;
  margin-bottom: 4rpx;
}

.empty-state {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

.grid-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.grid-item {
  width: 48%;
  margin-bottom: 16rpx;
}

.metric-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.metric-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.metric-icon image {
  width: 100%;
  height: 100%;
}

.metric-content {
  text-align: center;
}

.metric-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.metric-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 8rpx;
}

.metric-unit {
  font-size: 22rpx;
  color: #999;
}

.metric-progress {
  margin-top: 16rpx;
  height: 6rpx;
  background: #f5f5f5;
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: #1AAD19;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.quick-actions {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.action-button {
  background: linear-gradient(135deg, #1AAD19, #2ecc71);
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(26, 173, 25, 0.2);
  border: none;
}

.action-button image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.assistant-profile {
  display: flex;
  align-items: center;
  padding: 0 40rpx;
}

.assistant-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.assistant-info {
  margin-left: 20rpx;
}

.assistant-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.assistant-role {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 4rpx;
  display: block;
}

.chat-container {
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.assistant-message {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.message-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
}

.message-content {
  background: #fff;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  max-width: 80%;
}

.message-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
}

.daily-summary {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.summary-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.summary-content {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
} 