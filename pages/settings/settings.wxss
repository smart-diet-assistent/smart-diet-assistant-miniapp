.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

.settings-form {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.avatar-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.avatar-item {
  aspect-ratio: 1;
  border-radius: 20rpx;
  overflow: hidden;
  border: 4rpx solid transparent;
  transition: all 0.3s ease;
}

.avatar-item.selected {
  border-color: #1AAD19;
  box-shadow: 0 0 20rpx rgba(26, 173, 25, 0.2);
}

.avatar-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.preview {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.preview-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

.preview-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin-bottom: 20rpx;
  border: 4rpx solid #1AAD19;
}

.preview-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.save-button {
  background: linear-gradient(135deg, #1AAD19, #2ecc71);
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 24rpx 0;
  width: 100%;
  border: none;
  box-shadow: 0 4rpx 20rpx rgba(26, 173, 25, 0.2);
} 